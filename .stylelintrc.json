{
    "plugins": [
        "stylelint-scss",
        "stylelint-order"
    ],
    "extends": [
        "stylelint-config-standard"
    ],
    "rules": {
        "order/order": [
			"custom-properties",
			"declarations"
		],
        "indentation": [
            4
        ],
        "at-rule-empty-line-before": [
            "always",
            {
                "ignore": ["inside-block"],
                "ignoreAtRules": ["import"]
            }
        ],
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "mixin", "include"
                ]
            }
        ],
        "max-nesting-depth": 2
    }
}