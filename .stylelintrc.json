{
    "plugins": [
        "stylelint-scss",
        "stylelint-order"
    ],
    "extends": [
        "stylelint-config-standard"
    ],
    "rules": {
        "order/order": [
			"custom-properties",
			"declarations"
		],
        "indentation": [
            4
        ],
        "at-rule-empty-line-before": [
            "always",
            {
                "ignore": ["inside-block"],
                "ignoreAtRules": ["import"]
            }
        ],
        "block-no-empty": null,
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "mixin", "include", "charset", "function", "for", "each", "if", "else", "error", "warn", "return", "extend"
                ]
            }
        ],
        "max-nesting-depth": 2,
        "declaration-empty-line-before": "never"
    }
}